<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRecord"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="20dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/md_theme_light_surface">

        <!-- Main Content (Always Visible) -->
        <LinearLayout
            android:id="@+id/layoutMainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp">

            <!-- Icon Circle -->
            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="16dp">

                <View
                    android:id="@+id/typeIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/record_icon_background"/>

                <TextView
                    android:id="@+id/tvRecordIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ðŸ¼"
                    android:textSize="28sp"
                    android:gravity="center"/>

            </FrameLayout>

            <!-- Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRecordType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="å–‚å¥¶"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_onSurface"
                    android:letterSpacing="0.01"/>

                <TextView
                    android:id="@+id/tvRecordDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="æ¯ä¹³ å·¦è¾¹ 15åˆ†é’Ÿ"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant"/>

                <TextView
                    android:id="@+id/tvRecordTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="2024-01-01 10:30"
                    android:textSize="12sp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant"
                    android:alpha="0.7"
                    android:drawablePadding="4dp"
                    android:drawableStart="@android:drawable/ic_menu_recent_history"
                    android:drawableTint="@color/md_theme_light_onSurfaceVariant"/>

            </LinearLayout>

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="åˆ é™¤"
                android:scaleType="center"/>

        </LinearLayout>

        <!-- Notes Section (Expandable) -->
        <LinearLayout
            android:id="@+id/layoutNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingBottom="18dp">

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:background="@color/md_theme_light_outlineVariant"
                android:alpha="0.3"/>

            <!-- Notes Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="å¤‡æ³¨"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_light_onSurfaceVariant"
                android:alpha="0.7"
                android:layout_marginBottom="6dp"/>

            <!-- Notes Content -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/md_theme_light_outline"
                app:cardBackgroundColor="@color/md_theme_light_surfaceVariant">

                <TextView
                    android:id="@+id/tvRecordNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="å®å®çš„å¤‡æ³¨ä¿¡æ¯"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_light_onSurface"
                    android:lineSpacingExtra="2dp"/>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
